/* transform */

@keyframes loadingRotate {
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(360deg);
  }
}

@keyframes maskShow {
  0% {
      opacity: 0;
      display: none;
  }
  1% {
      opacity: 0;
      display: flex;
  }
  100% {
      opacity: 0.5;
      display: flex;
  }
}

@keyframes maskHide {
  0% {
      opacity: 0.5;
      display: flex;
  }
  99% {
      opacity: 0;
      display: flex;
  }
  100% {
      opacity: 0;
      display: none;
  }
}
